    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">
        <activity
            android:name=".HotelBookmarksActivity"
            android:exported="false" />
        <activity
            android:name=".TicketInformationActivity"
            android:exported="false" />
        <activity
            android:name=".HotelInformationActivity"
            android:exported="false" />
        <activity
            android:name=".EventActivity"
            android:exported="false" />
        <activity
            android:name=".CountryInfoPopup"
            android:exported="false" />
        <activity
            android:name=".LandmarksActivity"
            android:exported="false" />
        <activity
            android:name=".AudioGuidesActivity"
            android:exported="false" />
        <activity
            android:name=".TrainTicketActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <activity
            android:name=".TicketActivity"
            android:exported="false" />
        <activity
            android:name=".SputnikGuidesActivity"
            android:exported="false" />
        <activity
            android:name=".LaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HotelActivity"
            android:theme="@style/Theme.JotterJourney.NoActionBar" />
    </application>

</manifest>
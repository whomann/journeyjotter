<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/launchTourImageView"
        android:layout_width="180dp"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/launchTourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:text="Tour name"
        android:textAlignment="center"
        android:textColor="@color/accent_color"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/launchTourDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="10sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/accent_color"
        android:layout_weight="1"
        android:text="Tour duration" />

    <TextView
        android:id="@+id/launchTourPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textColor="@color/accent_color"
        android:text="Tour price" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/linkButton"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="65dp"
            android:backgroundTint="@color/accent_color"
            android:scaleType="fitCenter"
            android:src="@drawable/link_white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:text="Button" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
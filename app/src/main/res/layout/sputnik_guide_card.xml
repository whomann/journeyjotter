<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/guideImageView"
                android:layout_width="0dp"
                android:layout_height="231dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="«Метеор» в Петергоф: трансфер, билеты, экскурсия"
                android:textAlignment="center"
                android:textColor="@color/accent_color"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beginPlaceTextView" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:background="#E36262"
                android:fontFamily="@font/montserrat_bold"
                android:text="4.6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Что вас ждет:\r\n\r\nАвтобусом из Петербурга мы отправимся в Петергоф. Уже в дороге вы услышите увлекательный рассказ экскурсовода об этом удивительном месте.\r\n\r\nПо замыслу Петра I резиденция в Петергофе должна была достичь двух целей — сравниться в своем великолепии со знаменитой королевской резиденцией во Франции и стать триумфальным памятником борьбы России за выход к Балтийскому морю. Обе задачи были выполнены блестяще и резиденция с XVIII века восхищает всех путешественников.\r\n\r\nВы погуляете по обширному Нижнему парку с экскурсоводом, узнаете историю этого места и осмотрите фонтаны. А после совершите морскую прогулку до Петербурга на комфортабельном скоростном метеоре.\r\n\r\nНа пути в Петербург вы увидите: \r\n\r\n• Самый северный небоскреб «Лахта Центр» (462 метра)\r\n• Западный скоростной диаметр\r\n• Футбольный стадион «Газпром Арена».\r\n\r\n Важно знать:\r\n\r\n• Экскурсия по парку длится 1,5 часа. Её для вас проводит сотрудник музея. Затем вам будет предоставлено свободно время - 1 час.\r\n• В случае неблагоприятных погодных условиях (шторм, ураган, высокие волны и пр.) рейс может быть отменен. Мы предложим вам вернуться в Санкт-Петербург на туристическом автобусе.\r\n• Будьте внимательны при бронировании туристических услуг. Выбирайте категорию, которую Вы сможете подтвердить при посадке в автобус документами (паспорт, Свидетельство о рождении, Пенсионное удостоверение или студенческий билет). Если категория будет указана неверно, придется доплачивать до полной стоимости билета.\r\n• Стоимость билетов в Петергофе для граждан стран ЕАЭС (Армения, Беларусь, Казахстан, Кыргызстан) одинакова со стоимостью билетов граждан РФ.\r\n• Школьникам 15+ для подтверждения необходима справка из школы.\r\n• Возьмите с собой паспорт (для детей - свидетельство о рождении)! Это обязательное условие для входа в парк.\r\n• Места на метеор приобретаются автоматически класса Standart (в салоне на корме) в зависимости от наличия свободных мест на момент оплаты. Места могут быть расположены  не рядом. \r\n•  Вы можете изменить категорию места на метеоре до Comfort (в центральном салоне), Business Class (в салоне с панорамным остеклением в носовой части) заблаговременно обратившись к организатору по телефону указанному в Вашем билете.\r\n•  Посещать территорию ГМЗ «Петергоф», в том числе музеи и дворцы, с животными любых видов, пород и размеров."
                    android:textColor="@color/TextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.489"
                     />

            </LinearLayout>

            <TextView
                android:id="@+id/placesToSeeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="• Нижний парк\r\n• Фонтаны Петергофа\r\n• Самый северный небоскреб «Лахта-центр» (462 метра)\r\n• Западный скоростной диаметр\r\n• Футбольный стадион «Газпром Арена»."
                android:textAlignment="textStart"
                android:textColor="@color/TextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/beginPlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="204dp"
                android:background="@color/accent_color"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="4dp"
                android:textAlignment="center"
                android:paddingRight="4dp"
                android:text="Начало: Санкт-Петербург, Думская ул.2"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideImageView" />

            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:background="@color/accent_color_2"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="ru"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideImageView" />

            <TextView
                android:id="@+id/guidePriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="1200.00 ₽"
                android:textAlignment="center"
                android:textColor="@color/accent_color"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expandableLayout" />

            <Button
                android:id="@+id/buyGuideButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/accent_color_2"
                android:fontFamily="@font/montserrat_bold"
                android:text="Купить"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guidePriceTextView" />

            <ImageButton
                android:id="@+id/boughtGuideButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="15dp"
                android:elevation="1dp"
                android:backgroundTint="@color/accent_color_2"
                android:fontFamily="@font/montserrat_bold"
                android:src="@drawable/checkwhite"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guidePriceTextView" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Что посмотрим"
                android:textColor="@color/accent_color"
                android:textSize="19sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Что вас ждет"
                android:textColor="@color/accent_color"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placesToSeeTextView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@+id/boughtGuideButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>